<%= form_with(model: reservation, url: [listing, reservation]) do |form| %>
  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: 'form-control' %>
    <div class="invalid-feedback">
      <%= show_field_errors(reservation, :start_date) %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: 'form-control' %>
    <div class="invalid-feedback">
      <%= show_field_errors(reservation, :start_date) %>
    </div>
  </div>

  <div class="form-group">
    <% if reservation.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', reservation, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if reservation.persisted? %>
      <%= link_to "Cancel", "#", class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", "#", class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
