<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert <%= bootstrap_class_for(key) %>">
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <%= render 'shared/footer' %>
  </body>
</html>
