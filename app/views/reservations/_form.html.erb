<%= form_with(model: reservation, url: [listing, reservation]) do |form| %>
  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: 'form-control' %>
    <div class="invalid-feedback">
      <%= show_field_errors(reservation, :start_date) %>
    </div>
  </div>

  <div class="form-row">
    <div class="col">
      <div class="form-group">
        <%= form.label :end_date %>
        <%= form.date_field :end_date, class: 'form-control' %>
        <div class="invalid-feedback">
          <%= show_field_errors(reservation, :end_date) %>
        </div>
      </div>      
    </div>
    <div class="col">
      <div class="form-group">
        <%= form.label :checkout_time %>
        <%= form.time_field :checkout_time, class: 'form-control' %>
        <div class="invalid-feedback">
          <%= show_field_errors(reservation, :checkout_time) %>
        </div>
      </div>      
    </div>
  </div>

  <div class="form-group">
    <% if reservation.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', listing_reservation_path(@listing, reservation), method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if reservation.persisted? %>
      <div class="btn btn-link rm-reservations__edit-cancel-button">Cancel</div>
    <% else %>
      <div class="btn btn-link rm-reservations__create-cancel-button">Cancel</div>
    <% end %>
  </div>
<% end %>
